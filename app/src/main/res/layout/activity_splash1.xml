<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen1"
    android:theme="@style/ThemeOverlay.Taxicle.FullscreenContainer"
    tools:context=".Splash1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Affordable prices at your service"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="#CC000000"
            android:text="Our ride prices are affordable for the service"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#52DAD2"
            android:text="Next"
            android:textSize="17dp"
            android:fontFamily="@font/poppins"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textSize="17dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="70dp"/>
    </LinearLayout>

</FrameLayout>