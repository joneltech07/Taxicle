<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen3"
    android:theme="@style/ThemeOverlay.Taxicle.FullscreenContainer"
    tools:context=".Splash3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book now with TAXICLE"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="#CC000000"
            android:text="Lorem ipsum dolor sit amet consectetur. Mauris a odio nibh venenatis neque ultrices. Elementum lorem sed aliquam sit nulla quam nam ullamcorper enim. Vitae aliquet in nibh proin fermentum. Congue in risus euismod vitae condimentum neque ipsum elementum."
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/getStarted"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#52DAD2"
            android:text="Get Started"
            android:textSize="17dp"
            android:fontFamily="@font/poppins"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="70dp"/>
    </LinearLayout>

</FrameLayout>