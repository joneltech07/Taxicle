<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Taxicle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="DialogSlideProceed">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="Theme.Taxicle" parent="Base.Theme.Taxicle" />

    <style name="Theme.Taxicle.Fullscreen" parent="Theme.Taxicle">
        <item name="android:actionBarStyle">@style/Widget.Theme.Taxicle.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Taxicle.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>